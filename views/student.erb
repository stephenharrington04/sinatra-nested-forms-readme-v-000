<h1>Student</h1>

<div class="student">
  <h3>Name: <%= @student.name %></h3>
  <h2>Grade: <%= @student.grade %></h2>
</div><br>

<h1>Courses</h1>
<% @courses.each do |course| %>
  <div class="course">
    <p>Name: <%= course.name %></p>
    <p>Topic: <%= course.topic %></p>
  </div><br>
  <% end %>
